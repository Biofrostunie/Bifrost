{
  "name": "financial-education-platform",
  "version": "1.0.0",
  "description": "A comprehensive financial education and tracking platform built with NestJS",
  "author": "Financial Education Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config jest.config.js --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json --runInBand",
    "test:e2e:watch": "jest --config test/jest-e2e.json --watch --runInBand",
    "test:load": "jest --config test/jest-load.json --runInBand --detectOpenHandles",
    "test:unit": "jest --config jest.config.js --testPathPattern=src/.*\\.spec\\.ts$",
    "test:integration": "jest --config jest.config.js --testPathPattern=src/.*\\.integration\\.spec\\.ts$",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --config jest.config.js --coverage --watchAll=false --passWithNoTests",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "docker:build": "docker build -t financial-education-backend .",
    "docker:run": "docker run -p 3000:3000 financial-education-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
"dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/throttler": "^6.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@prisma/client": "^6.0.0",
    "@trpc/server": "^11.0.0",
    "prisma": "^6.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8",
    "nodemailer": "^6.9.15",
    "crypto": "^1.0.1",
    "puppeteer": "^23.0.0",
    "handlebars": "^4.7.8",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/nodemailer": "^6.4.15",
    "@types/puppeteer": "^7.0.4",
    "@types/handlebars": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.0",
    "artillery": "^2.0.20"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts",
      "!src/**/*.e2e-spec.ts",
      "!src/**/*.integration.spec.ts",
      "!src/main.ts",
      "!src/**/*.module.ts",
      "!src/**/*.interface.ts",
      "!src/**/*.dto.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/auth/(.*)$": "<rootDir>/src/auth/$1",
      "^@/users/(.*)$": "<rootDir>/src/users/$1",
      "^@/expenses/(.*)$": "<rootDir>/src/expenses/$1",
      "^@/incomes/(.*)$": "<rootDir>/src/incomes/$1",
      "^@/investment-simulations/(.*)$": "<rootDir>/src/investment-simulations/$1",
      "^@/financial-concepts/(.*)$": "<rootDir>/src/financial-concepts/$1",
      "^@/common/(.*)$": "<rootDir>/src/common/$1",
      "^@/prisma/(.*)$": "<rootDir>/src/prisma/$1",
      "^@/trpc/(.*)$": "<rootDir>/src/trpc/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "testTimeout": 30000
  }
}