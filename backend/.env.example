# ===========================================
# BIFRÖST EDUCATION PLATFORM - ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/financial_education_db"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV="development"
PORT=3000

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# IMPORTANT: Generate a strong, random secret for production
# You can use: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL="debug"

# ===========================================
# EMAIL CONFIGURATION (SMTP REQUIRED)
# ===========================================
# Gmail SMTP Configuration (recommended)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="your-email@gmail.com"
EMAIL_FROM_NAME="Bifröst Education Platform"

# ===========================================
# FRONTEND CONFIGURATION (Optional)
# ===========================================
FRONTEND_URL="http://localhost:3001"

# ===========================================
# PDF GENERATION CONFIGURATION
# ===========================================
# For Docker environments, use system Chromium
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
# PUPPETEER_EXECUTABLE_PATH="/usr/bin/chromium-browser"

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ===========================================
# DEVELOPMENT TOOLS (Development only)
# ===========================================
# Uncomment for development
# PRISMA_STUDIO_PORT=5555
# DEBUG="*"